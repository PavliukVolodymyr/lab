<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/countDownText"
        android:layout_width="390dp"
        android:layout_height="36dp"
        android:text="TextView"/>
    <EditText
        android:maxLength="100"
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bC"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="C" />
            <Button
                android:id="@+id/bB1"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="("/>
            <Button
                android:id="@+id/bB2"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text=")"/>
            <Button
                android:id="@+id/bD"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="/"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/b7"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="7"/>
            <Button
                android:id="@+id/b8"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="8"/>
            <Button
                android:id="@+id/b9"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="9"/>
            <Button
                android:id="@+id/bmul"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="*"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/b4"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="4"/>
            <Button
                android:id="@+id/b5"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="5"/>
            <Button
                android:id="@+id/b6"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="6"/>
            <Button
                android:id="@+id/bMin"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="-"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/b1"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="1"/>
            <Button
                android:id="@+id/b2"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="2"/>
            <Button
                android:id="@+id/b3"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="3"/>
            <Button
                android:id="@+id/bP"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="+"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/b0"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="0"/>
            <Button
                android:id="@+id/bPoi"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="."/>
            <Button
                android:id="@+id/bDel"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="x"/>
            <Button
                android:id="@+id/bE"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="="/>
        </LinearLayout>
        <Button
            android:id="@+id/bHistory"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:text="history"/>
    </LinearLayout>
</LinearLayout>